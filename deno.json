{
  "name": "@ui-lib/core",
  "version": "0.13.0",
  "description": "Ultra-lightweight, type-safe SSR components with DOM-native state management and hybrid reactivity",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/ui-lib.git"
  },
  "keywords": [
    "ssr",
    "components",
    "typescript",
    "deno",
    "htmx",
    "dom-native",
    "reactivity",
    "web-components",
    "functional",
    "zero-runtime"
  ],
  "exports": {
    ".": "./mod.ts"
  },

  "tasks": {
    "check": "deno check index.ts lib/**/*.ts examples/**/*.tsx",
    "test": "deno test",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "coverage": "rm -rf coverage coverage.lcov && deno test --coverage=coverage && deno coverage coverage --lcov --exclude='(jsx-runtime|define-component)\\.ts$' --output=coverage.lcov",

    "serve": "deno run --allow-net --allow-read --allow-env --unstable-kv examples/todo-app/server-custom.tsx",
    "serve:todo": "deno run --allow-net --allow-read --allow-env --unstable-kv examples/todo-app/server-custom.tsx",
    "serve:shopping": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv examples/shopping-cart/server.tsx",

    "dev:todo": "deno run --allow-net --allow-read --allow-env --unstable-kv --watch examples/todo-app/server-custom.tsx",
    "dev:shopping": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv --watch examples/shopping-cart/server.tsx",

    "start": "deno task check && deno task serve",
    "start:todo": "deno task check && deno task serve:todo",
    "start:shopping": "deno task check && deno task serve:shopping",

    "bundle:state": "deno run --allow-read --allow-write scripts/bundle_state.ts",
    "ci:examples-guard": "deno run --allow-read scripts/checks/no_rendercomponent_in_examples.ts",
    "docs": "deno fmt --check docs/**/*.md"
  },

  "compilerOptions": {
    "strict": true,
    "lib": ["ES2021", "DOM", "deno.ns"],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },

  "imports": {
    "jsx": "./lib/jsx-runtime.ts"
  },

  "lint": {
    "include": ["index.ts", "examples/todo-app"],
    "exclude": [
      "examples/**/*.test.ts",
      "examples/**/*.test.tsx",
      "scripts",
      "examples/layout-demo.ts",
      "examples/todo-app/api/response.tsx"
    ]
  }
}
